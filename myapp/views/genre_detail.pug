extends layout
block content
  h1.display-6.text-center.mt-4.mb-4 Genre - #{genre.name}

  if genre_books.length > 0
    .container
      h4.display-6.text-center.mt-5 Books
      .row
        each book in genre_books
          .col-4
            div(class="card mb-3" style="width: 19rem; height: 21rem;")
              a(href=book.url class="card-img-top m-1 ")
                img(src='/book.png', alt='Book Cover', class='card-img-top')
              div(class="card-body text-center")
                h4(class="card-title mb-4") #{book.title}
  else
    .card-body.text-center
      p.lead This genre has no books
      img(src='/no-education.png', alt='Book Cover', class='card-img-top mx-auto')

  hr.text-center
  .text-center
    p
      a.btn.btn-outline-danger(href=genre.url+'/delete') Delete genre
    p
      a.btn.btn-outline-primary(href=genre.url+'/update') Update genre
