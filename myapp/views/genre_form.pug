extends sidebar

block content
  h1.display-6.text-center.mt-4.mb-4= title
  .card.p-4.cardform 
    form(method='POST' action='')
      .form-group
        label.mb-1(for='name') Genre:
        input#name.form-control(type='text', placeholder='Fantasy, Poetry etc.' name='name' required='true' value=(undefined===genre ? '' : genre.name) )
      br
      button.btn.btn-outline-primary.mt-3(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
